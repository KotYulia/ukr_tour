<div class="container">
  <div class="login-block">
    <h1>Log In</h1>
    <%= form_tag sessions_path do %>
      <div class="field">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
      </div>
      <div class="field">
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </div>
      <div class="actions"><%= submit_tag "Log In" %></div>
      <div class="actions"><a href="/auth/facebook?display=popup">Sign in with Facebook</a></div>
    <% end %>
  </div>
</div>